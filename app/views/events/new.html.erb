<section class="section">
  <div class="container">
    <div class="box">
      <%= simple_form_for @event do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :title, wrapper: false, input_html: { class: "input" },
                                label_html: { class: "label" } %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :description, wrapper: false, input_html: { class: "textarea" },
                                         label_html: { class: "label" } %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :date, as: :date, html5: true, wrapper: false, input_html: { class: "date" },
                              label_html: { class: "label" } %>
          </div>
        </div>
      
        <%= f.button :submit, class: "button"%>
      <% end %>

    </div>
  </div>
</section>
      