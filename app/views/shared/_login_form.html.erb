<%= simple_form_for :login do | f |%>
  <div class="field">
    <div class="control">
      <%= f.input :username,
                  input_html: { class: 'input' },
                  label: 'Username',
                  label_html: { class: 'label' },
                  wrapper: false, autofocus: true %>
    </div>
  </div>
  <%= f.submit "Login", class: 'button' %>
<% end %>