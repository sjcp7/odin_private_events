<section class="section">
  <div class="container">
    <h1 class="title">Create User</h1>
    <div class="box">
      <%= simple_form_for @user do | f |%>
        <div class="field">
          <div class="control">
            <%= f.input :username,
                        input_html: { class: 'input' },
                        label: 'Username',
                        label_html: { class: 'label' },
                        wrapper: false, autofocus: true %>
          </div>
        </div>
        <%= f.button :submit, class: 'button' %>
      <% end %>
    </div>
  </div>
</section>
  
